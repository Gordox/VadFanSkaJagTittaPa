<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gg.gordox.vadfanskajagtittapa.MainFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/Gender_selection">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/male"
                    android:id="@+id/bn_Gender_Male"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:onClick="OnGenderClick (MainFragment)" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/hen"
                    android:id="@+id/bn_Gender_TosaPog"
                    android:layout_weight="1"
                    android:minHeight="50dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/female"
                    android:id="@+id/bn_Gender_Female"
                    android:layout_weight="1"
                    android:minHeight="50dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/Mood_Selection">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/happysmall"
                    android:id="@+id/bn_Mood_Happy"
                    android:layout_weight="1"
                    android:onClick="OnMoodClick" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/calmsmall"
                    android:id="@+id/bn_Mood_Content"
                    android:layout_weight="1"
                    android:onClick="OnMoodClick" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/sadsmall"
                    android:layout_weight="1"
                    android:id="@+id/bn_Mood_Sad"
                    android:onClick="OnMoodClick" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/angrysmall"
                    android:id="@+id/bn_Mood_Angry"
                    android:layout_weight="1"
                    android:onClick="OnMoodClick" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/sleepsmall"
                    android:id="@+id/bn_Mood_Sleepy"
                    android:layout_weight="1"
                    android:onClick="OnMoodClick" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Genre_preference"
                android:layout_marginTop="30dp">

                <TextView
                    android:text="@string/text_view_select_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Preferred_Genre"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_Genera_Preference_Selector"
                    android:minWidth="200dp" />



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:text="@string/button_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bn_Search"
                    android:layout_weight="1"
                    android:onClick="OnSearchClick" />
            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
